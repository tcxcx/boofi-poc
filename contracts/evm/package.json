{
  "name": "synonym-finance-contracts",
  "version": "0.0.1",
  "description": "synonym finance EVM contracts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "compile": "npx hardhat clean && npx hardhat compile",
    "deploy:hub": "npx hardhat deploy-hub --network fuji",
    "deploy:spoke:op-goerli": "npx hardhat deploy-spoke --network op-goerli",
    "deploy:spoke:goerli": "npx hardhat deploy-spoke --network goerli",
    "deploy:spoke:sepolia": "npx hardhat deploy-spoke --network sepolia",
    "deploy:spoke:mumbai": "npx hardhat deploy-spoke --network mumbai",
    "register-spokes": "npx hardhat register-spokes --network fuji",
    "tenderly:verify:hub": ". ./.env && npx hardhat tenderly:verify Hub=$AVAX_TESTNET_HUB_ADDRESS --network fuji",
    "tenderly:verify:spoke:op-goerli": ". ./.env && npx hardhat tenderly:verify Spoke=$OP_GOERLI_SPOKE_ADDRESS --network op-goerli",
    "tenderly:verify:spoke:goerli": ". ./.env && npx hardhat tenderly:verify Spoke=$GOERLI_SPOKE_ADDRESS --network goerli",
    "tenderly:verify:spoke:mumbai": ". ./.env && npx hardhat tenderly:verify Spoke=$MUMBAI_SPOKE_ADDRESS --network mumbai",
    "testnet-deploy-synonym": "npx hardhat compile && yarn deploy:hub && yarn deploy:spoke:op-goerli && yarn deploy:spoke:goerli && yarn deploy:spoke:mumbai && yarn register-spokes",
    "testnet-tenderly-verify": "yarn tenderly:verify:hub && yarn tenderly:verify:spoke:op-goerli && yarn tenderly:verify:spoke:goerli && yarn tenderly:verify:spoke:mumbai",
    "testnet-upgrade-hub": "npx hardhat upgrade-hub --network fuji",
    "test-calc-rewards": "hardhat test",
    "runEpochRewards": "cd ts-scripts/reward-scripts && npx ts-node runEpochRewards.ts --distribution=\"[{\\\"address\\\": \\\"0xCa4A882b3E4Fc010eDfb199E9B3f6306809a9b84\\\", \\\"amount\\\":1000}]\" --rCTDistribution=\"[{\\\"address\\\": \\\"0xCa4A882b3E4Fc010eDfb199E9B3f6306809a9b84\\\", \\\"amount\\\":1000}, {\\\"address\\\": \\\"0x6E0E8C78D7B894bEFF66ade8B27b089a53cF4D04\\\", \\\"amount\\\":20000}]\""
  },
