{
  "name": "boofi-finance-contracts",
  "version": "0.0.1",
  "description": "boofi finance EVM contracts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "compile": "npx hardhat clean && npx hardhat compile",
    "deploy:aggregator": "npx hardhat run src/scripts/deployAggregatorV3BooFiPriceSource.js --network fuji",
    "deploy:assetRegistry": "npx hardhat run src/scripts/deployAssetRegistry.js --network fuji",
    "deploy:boofiPriceOracle": "npx hardhat run src/scripts/deployBooFiPriceOracle.js --network fuji",
    "deploy:chainedPriceSource": "npx hardhat run src/scripts/deployPythBooFiPriceSource.js --network fuji",
    "deploy:hubHelperViews": "npx hardhat run src/scripts/deployHubHelperViews.js --network fuji",
    "deploy:hubPriceUtilities": "npx hardhat run src/scripts/deployHubPriceUtilities.js --network fuji",
    "deploy:linearInterestRateCalculator": "npx hardhat run src/scripts/deployLinearInterestRate.js --network fuji",
    "deploy:liquidatorCalculator": "npx hardhat run src/scripts/deployLiquidatorCalculator.js --network fuji",
    "deploy:liquidatorFlashloan": "npx hardhat run src/scripts/deployLiquidatorFlashloan.js --network fuji",
    "deploy:liquidator": "npx hardhat run src/scripts/deployLiquidator.js --network fuji",
    "deploy:pythBooFiPriceSource": "npx hardhat run src/scripts/deployPythBooFiPriceSource.js --network fuji",
    "deploy:registerSpoke": "npx hardhat run src/scripts/registerSpokejs --network fuji",
    "deploy:hub": "npx hardhat run src/scripts/deployHub.js --network fuji",
    "deploy:spoke:base-sepolia": "npx hardhat run src/scripts/deploySpoke.js --network base-sepolia",
    "deploy:spoke:sepolia": "npx hardhat run src/scripts/deploySpoke.js --network sepolia",
    "deploy:spoke:op-sepolia": "npx hardhat run src/scripts/deploySpoke.js --network op-sepolia",
    "deploy:spoke:arb-sepolia": "npx hardhat run src/scripts/deploySpoke.js --network arb-sepolia",
    "deploy:spoke:fuji": "npx hardhat run src/scripts/deploySpoke.js --network fuji",
    "deploy:register-spokes": "npx hardhat run src/scripts/registerSpoke.js --network fuji",
    "deploy:sender": "npx hardhat run src/scripts/deploySenderOnChainCFuji.js --network fuji",
    "deploy:receiver": "npx hardhat run src/scripts/deployReceiverOnSubnet.js --network privateBlockchain",
    "tenderly:verify:hub": "npx hardhat tenderly:verify Hub=$HUB_CONTRACT_ADDRESS --network fuji",
    "tenderly:verify:spoke:op-sepolia": "npx hardhat tenderly:verify Spoke=$OP_SEPOLIA_SPOKE_ADDRESS --network op-sepolia",
    "tenderly:verify:spoke:sepolia": "npx hardhat tenderly:verify Spoke=$SEPOLIA_SPOKE_ADDRESS --network sepolia",
    "tenderly:verify:spoke:arb-sepolia": "npx hardhat tenderly:verify Spoke=$ARB_SEPOLIA_SPOKE_ADDRESS --network arb-sepolia",
    "testnet-deploy-boofi": "yarn compile && yarn deploy:hub && yarn deploy:spoke:base-sepolia && yarn deploy:register-spokes",
    "testnet-tenderly-verify": "yarn tenderly:verify:hub && yarn tenderly:verify:spoke:op-sepolia && yarn tenderly:verify:spoke:sepolia && yarn tenderly:verify:spoke:arb-sepolia",
    "testnet-upgrade-hub": "npx hardhat run src/scripts/upgradeHub.js --network base-sepolia",
    "test-calc-rewards": "npx hardhat test",
    "runEpochRewards": "cd ts-scripts/reward-scripts && npx ts-node runEpochRewards.ts --distribution=\"[{\\\"address\\\": \\\"0xCa4A882b3E4Fc010eDfb199E9B3f6306809a9b84\\\", \\\"amount\\\":1000}]\" --rCTDistribution=\"[{\\\"address\\\": \\\"0xCa4A882b3E4Fc010eDfb199E9B3f6306809a9b84\\\", \\\"amount\\\":1000}, {\\\"address\\\": \\\"0x6E0E8C78D7B894bEFF66ade8B27b089a53cF4D04\\\", \\\"amount\\\":20000}]\""
  },
